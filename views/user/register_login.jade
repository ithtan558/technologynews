section
	.container
		.row
			.col-sm-12.col-md-12
				ui-breadcrumbs(displayname-property='data.displayName', abstract-proxy-property='data.proxy', template-url='partials/breadcrumbs')
			.col-sm-6.col-md-6
				.signin
					.social_sign
						h3 Sign in with your social account
						a.fb(href='/auth/facebook' target='_self')
							i.fa.fa-facebook
						a.tw(href='#twitter')
							i.fa.fa-twitter
						a.gp(href='#googleplus')
							i.fa.fa-google-plus
					.or
						.or_l
						span or
						.or_r
					p.sign_title Log in with your site account
					.row
						.col-lg-2
						.form.col-lg-8
							form#sign_in.form-horizontal(name='form_login', ng-submit='login()', novalidate='')
								input.form-control(name='email', placeholder='Email', required='', type='text', ng-model='userDataLogin.email')
								input.form-control(name='password', placeholder='Password', required='', type='password', ng-model='userDataLogin.password')
								.forgot
									.checkbox
										label
											input(type='checkbox')
											|  Remember me
									a(href='#') Forgot password?
								button.btn.btn-primary.btn-lg(type='submit', ng-disabled='form_login.$invalid') Sign in
						.col-lg-2
			.col-sm-6.col-md-6
				.signup
					form(name='form_register', ng-submit='register()', role='form')
						fieldset
							.social_sign
								h3 Don't have a site account yet?
								a
									i.fa.fa-user
							p.sign_title Create one now, it's fast & free!
							.row
								.col-lg-2
								.col-lg-8
									input#Displayname.form-control(name='displayname', placeholder='Display name', required='', type='text', ng-model='userDataRegister.displayname')
									input#Emailaddress.form-control(name='email', placeholder='Email address', required='', type='text', ng-model='userDataRegister.email')
									input#Password.form-control(name='password', placeholder='Password', required='', type='password', ng-model='userDataRegister.password')
									.checkbox
										label
											input(name='checkboxes', value='Option one', type='checkbox')
											|  I agree to the 
											a(href='#') terms and conditions
								.col-lg-2
							button.btn.btn-success.btn-lg(type='submit', ng-disabled='form_register.$invalid') Create your account
		.container
