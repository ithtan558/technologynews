			a.list-group-item(href='#')
				span.badge 25
				|  Third item
			a.list-group-item(href='#')
				span.badge 14
				|  Active item
			a.list-group-item(href='#')
				span.badge 3
				|  Second item
		button.btn.btn-default.btn-sm.btn-block(data-toggle='collapse', data-target='#categories')
			| More 
			span.caret
		hr
		h4 Tags
		a.list-group-item(ng-repeat='skill in listSkills', ui-sref='home.articleTag({slug: (skill.name | friendlyUrl), id:skill._id})',ng-class='{active: skill_id == skill._id}')
			span.badge(ng-bind='listArticleAll | countArticleByTag: skill.name')
			|  {{skill.name}}
